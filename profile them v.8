  // UPDATED Profile Search Functionality - More compact
  function initProfileSearch() {
    const profileSearch = document.getElementById('profileSearch');
    const searchButton = document.getElementById('searchButton');
    const filterButtons = document.querySelectorAll('.filter-btn');
    const profileCards = document.querySelectorAll('.profile-card');
    const profileGrid = document.getElementById('profileGrid');
    const noResults = document.getElementById('noResults');
    const visibleCount = document.getElementById('visibleCount');
    const totalCount = document.getElementById('totalCount');
    
    // Set total count
    if (totalCount && profileCards) {
      totalCount.textContent = profileCards.length;
    }
    
    // Search function
    function performSearch() {
      const searchTerm = profileSearch ? profileSearch.value.toLowerCase().trim() : '';
      const activeFilterButton = document.querySelector('.filter-btn.active');
      const activeFilter = activeFilterButton ? activeFilterButton.getAttribute('data-filter') : 'all';
      
      let visibleProfiles = 0;
      
      if (profileCards) {
        profileCards.forEach(card => {
          const platform = card.getAttribute('data-platform') || '';
          const type = card.getAttribute('data-type') || '';
          const name = card.getAttribute('data-name') || '';
          const profileName = card.querySelector('.profile-name')?.textContent.toLowerCase() || '';
          const username = card.querySelector('.profile-username')?.textContent.toLowerCase() || '';
          const badge = card.querySelector('.profile-badge')?.textContent.toLowerCase() || '';
          
          // Check if card matches search term
          const matchesSearch = !searchTerm || 
            platform.includes(searchTerm) || 
            name.includes(searchTerm) ||
            profileName.includes(searchTerm) ||
            username.includes(searchTerm) ||
            badge.includes(searchTerm);
          
          // Check if card matches filter
          const matchesFilter = activeFilter === 'all' || type === activeFilter;
          
          // Show/hide card based on both conditions
          if (matchesSearch && matchesFilter) {
            card.classList.remove('hidden');
            visibleProfiles++;
          } else {
            card.classList.add('hidden');
          }
        });
      }
      
      // Update stats
      if (visibleCount) {
        visibleCount.textContent = visibleProfiles;
      }
      
      // Show/hide no results message
      if (noResults) {
        if (visibleProfiles === 0) {
          noResults.classList.add('show');
        } else {
          noResults.classList.remove('show');
        }
      }
    }
    
    // Event listeners
    if (profileSearch) {
      profileSearch.addEventListener('input', performSearch);
      profileSearch.addEventListener('keypress', (e) => {
        if (e.key === 'Enter') {
          performSearch();
        }
      });
    }
    
    if (searchButton) {
      searchButton.addEventListener('click', performSearch);
    }
    
    // Filter buttons
    if (filterButtons) {
      filterButtons.forEach(button => {
        button.addEventListener('click', function() {
          // Remove active class from all buttons
          filterButtons.forEach(btn => btn.classList.remove('active'));
          
          // Add active class to clicked button
          this.classList.add('active');
          
          // Perform search with new filter
          performSearch();
        });
      });
    }
    
    // Initialize search
    performSearch();
  }

  // Function to fetch blog posts from Blogger JSON feed
  function fetchBlogPosts() {
    const projectsGrid = document.getElementById('projectsGrid');
    const loadingIndicator = document.getElementById('blogLoading');
    
    if (!projectsGrid) {
      console.log('Projects grid not found');
      return;
    }
    
    console.log('Fetching blog posts from JSON feed...');
    
    // Get your blog's JSON feed URL
    // This is the standard Blogger JSON feed URL
    const blogUrl = window.location.origin + window.location.pathname;
    const jsonFeedUrl = blogUrl.replace(/\/$/, '') + '/feeds/posts/default?alt=json&max-results=10';
    
    console.log('Fetching from:', jsonFeedUrl);
    
    // Fetch blog posts from JSON feed
    fetch(jsonFeedUrl)
      .then(response => {
        if (!response.ok) {
          throw new Error('Network response was not ok: ' + response.status);
        }
        return response.json();
      })
      .then(data => {
        console.log('Blog posts data received:', data);
        
        // Hide loading indicator
        if (loadingIndicator) {
          loadingIndicator.classList.remove('active');
        }
        
        // Check if we have posts
        if (!data.feed || !data.feed.entry || data.feed.entry.length === 0) {
          showNoPostsMessage(projectsGrid);
          return;
        }
        
        // Process and display posts
        displayBlogPosts(data.feed.entry, projectsGrid);
      })
      .catch(error => {
        console.error('Error fetching blog posts:', error);
        
        // Hide loading indicator
        if (loadingIndicator) {
          loadingIndicator.classList.remove('active');
        }
        
        // Try alternative method
        tryAlternativeMethod(projectsGrid);
      });
  }
  
  // Function to display blog posts
  function displayBlogPosts(posts, container) {
    console.log('Displaying', posts.length, 'blog posts');
    
    // Clear any existing content except loading indicator
    const existingContent = container.querySelectorAll('.blog-post, .no-posts-message');
    existingContent.forEach(el => el.remove());
    
    // Limit to 6 posts
    const postsToShow = Math.min(posts.length, 6);
    
    for (let i = 0; i < postsToShow; i++) {
      const post = posts[i];
      
      // Extract post data
      const postTitle = post.title?.$t || 'Blog Post';
      const postUrl = getPostUrl(post);
      const postExcerpt = getPostExcerpt(post);
      const postDate = getPostDate(post);
      const postImage = getPostImage(post);
      const postTags = getPostTags(post);
      
      // Create project card for blog post
      const blogPostCard = document.createElement('div');
      blogPostCard.className = 'project-card blog-post';
      blogPostCard.onclick = function() {
        window.location.href = postUrl;
      };
      
      // Create card HTML
      blogPostCard.innerHTML = `
        <div class="project-image-container">
          <img class="project-image" src="${postImage}" alt="${postTitle}" />
          <div class="project-image-overlay">
            <span class="project-category">Blog Post</span>
          </div>
        </div>
        <h3 class="project-title">${postTitle}</h3>
        <p class="project-description">${postExcerpt}</p>
        <div class="project-meta">
          ${postDate ? `
            <div class="project-date">
              <i class="far fa-calendar"></i> ${postDate}
            </div>
          ` : ''}
          <div class="project-read-more">
            Read Post <i class="fas fa-arrow-right"></i>
          </div>
        </div>
        ${postTags.length > 0 ? `
          <div class="project-tags">
            ${postTags.slice(0, 3).map(tag => `<span class="project-tag">${tag}</span>`).join('')}
          </div>
        ` : ''}
      `;
      
      container.appendChild(blogPostCard);
    }
    
    // Add "View All" card if there are more posts
    if (posts.length > 6) {
      const viewAllCard = document.createElement('div');
      viewAllCard.className = 'project-card blog-post';
      
      // Get blog archive URL
