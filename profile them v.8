          <div class="project-read-more" style="width: 100%; text-align: center; margin-top: 12px;">
            View All Posts <i class="fas fa-arrow-right"></i>
          </div>
        </div>
      `;
      
      container.appendChild(viewAllCard);
    }
  }
  
  // Helper function to get post URL
  function getPostUrl(post) {
    if (post.link && post.link.length > 0) {
      for (let link of post.link) {
        if (link.rel === 'alternate') {
          return link.href;
        }
      }
    }
    return '#';
  }
  
  // Helper function to get post excerpt
  function getPostExcerpt(post) {
    if (post.summary && post.summary.$t) {
      let excerpt = post.summary.$t.replace(/<[^>]*>/g, '');
      return excerpt.substring(0, 100) + (excerpt.length > 100 ? '...' : '');
    }
    
    if (post.content && post.content.$t) {
      let content = post.content.$t.replace(/<[^>]*>/g, '');
      return content.substring(0, 100) + (content.length > 100 ? '...' : '');
    }
    
    return 'Read this interesting blog post...';
  }
  
  // Helper function to get post date
  function getPostDate(post) {
    if (post.published && post.published.$t) {
      const date = new Date(post.published.$t);
      return date.toLocaleDateString('en-US', { 
        year: 'numeric', 
        month: 'short', 
        day: 'numeric' 
      });
    }
    return '';
  }
  
  // Helper function to get post image
  function getPostImage(post) {
    // Try to find image in content
    if (post.content && post.content.$t) {
      const content = post.content.$t;
      const imgMatch = content.match(/<img[^>]+src="([^">]+)"/);
      if (imgMatch && imgMatch[1]) {
        return imgMatch[1];
      }
    }
    
    // Fallback images based on category or random
    const fallbackImages = [
      'https://images.unsplash.com/photo-1499750310107-5fef28a66643?ixlib=rb-4.0.3&auto=format&fit=crop&w=800&q=80',
      'https://images.unsplash.com/photo-1551288049-bebda4e38f71?ixlib=rb-4.0.3&auto=format&fit=crop&w=800&q=80',
      'https://images.unsplash.com/photo-1540350394557-8d14678e7f91?ixlib=rb-4.0.3&auto=format&fit=crop&w=800&q=80'
    ];
    
    return fallbackImages[Math.floor(Math.random() * fallbackImages.length)];
  }
  
  // Helper function to get post tags
  function getPostTags(post) {
    const tags = [];
    if (post.category && Array.isArray(post.category)) {
      post.category.forEach(cat => {
        if (cat.term && cat.scheme && cat.scheme.includes('labels')) {
          tags.push(cat.term);
        }
      });
    }
    return tags;
  }
  
