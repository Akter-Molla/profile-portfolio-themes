<b:skin><![CDATA[
/* CSS Variables - Dark Modern Theme */
:root {
  --primary: #6C63FF;
  --primary-dark: #5A52D5;
  --secondary: #36D1DC;
  --accent: #FF6584;
  --dark: #0F172A;
  --darker: #020617;
  --light: #F1F5F9;
  --gray: #64748B;
  --gray-light: #E2E8F0;
  --white: #FFFFFF;
  --text-light: #F8FAFC;
  --text-dark: #0F172A;
  --text-muted: #94A3B8;
  
  --shadow: 0 4px 20px rgba(0, 0, 0, 0.15);
  --shadow-hover: 0 8px 30px rgba(0, 0, 0, 0.2);
  --shadow-modal: 0 20px 50px rgba(0, 0, 0, 0.3);
  --transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  --radius: 12px;
  
  --gradient-primary: linear-gradient(135deg, #6C63FF 0%, #5A52D5 100%);
  --gradient-secondary: linear-gradient(135deg, #36D1DC 0%, #6C63FF 100%);
  --gradient-accent: linear-gradient(135deg, #FF6584 0%, #FF8E53 100%);
  --gradient-dark: linear-gradient(135deg, #0F172A 0%, #1E293B 100%);
  --gradient-light: linear-gradient(135deg, #F1F5F9 0%, #E2E8F0 100%);
}

/* Reset & Base Styles */
* {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
}

body {
  font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
  line-height: 1.7;
  color: var(--text-light);
  background-color: var(--darker);
  overflow-x: hidden;
}

body.modal-open {
  overflow: hidden;
}

.container {
  width: 100%;
  max-width: 1200px;
  margin: 0 auto;
  padding: 0 12px;
}

/* REMOVED EXTRA SPACING - All sections */
section {
  width: 100%;
  position: relative;
  padding: 5px 0 !important;
  margin: 0 !important;
}

/* Blog Post Page Specific Styles */
.blog-post-page {
  background: var(--darker);
  min-height: 100vh;
}

.post-wrapper {
  max-width: 800px;
  margin: 0 auto;
  padding: 15px 0 30px;
}

.post-container {
  background: rgba(30, 41, 59, 0.8);
  border-radius: var(--radius);
  padding: 30px;
  border: 1px solid rgba(255, 255, 255, 0.1);
  margin-bottom: 30px;
}

.post-header {
  margin-bottom: 20px;
  padding-bottom: 15px;
  border-bottom: 1px solid rgba(255, 255, 255, 0.1);
}

.post-title {
  font-size: 2.2rem;
  color: var(--text-light);
  margin-bottom: 15px;
  line-height: 1.2;
}

.post-meta {
  display: flex;
  gap: 15px;
  flex-wrap: wrap;
  color: var(--text-muted);
  font-size: 0.85rem;
}

.post-meta-item {
  display: flex;
  align-items: center;
  gap: 6px;
}

.post-meta-item i {
  color: var(--primary);
}

.post-meta-item a {
  color: var(--text-muted);
  text-decoration: none;
  transition: var(--transition);
}

.post-meta-item a:hover {
  color: var(--primary);
}

.post-content {
  font-size: 1.05rem;
  line-height: 1.7;
  color: var(--text-light) !important;
  margin-bottom: 30px;
}

.post-content * {
  color: var(--text-light) !important;
}

.post-content p {
  color: var(--text-light) !important;
  margin-bottom: 1.2rem;
}

.post-content h1,
.post-content h2,
.post-content h3,
.post-content h4,
.post-content h5,
.post-content h6 {
  color: var(--text-light) !important;
  margin: 1.5rem 0 0.8rem;
}

.post-content a {
  color: var(--primary) !important;
  text-decoration: none;
}

.post-content a:hover {
  color: var(--secondary) !important;
  text-decoration: underline;
}

.post-content ul,
.post-content ol {
  margin: 0.8rem 0 0.8rem 1.5rem;
  color: var(--text-light) !important;
}

.post-content li {
  margin-bottom: 0.4rem;
  color: var(--text-light) !important;
}

.post-content blockquote {
  border-left: 3px solid var(--primary);
  padding-left: 1.2rem;
  margin: 1.5rem 0;
  font-style: italic;
  color: var(--text-muted);
}

.post-content code {
  background: rgba(108, 99, 255, 0.1);
  padding: 2px 5px;
  border-radius: 4px;
  font-family: 'Courier New', monospace;
  font-size: 0.85em;
  color: var(--secondary) !important;
}

.post-author {
  display: flex;
  align-items: center;
  gap: 15px;
  padding: 20px;
  background: rgba(15, 23, 42, 0.5);
  border-radius: var(--radius);
  margin: 30px 0;
  border: 1px solid rgba(255, 255, 255, 0.1);
}

.author-avatar {
  width: 70px;
  height: 70px;
  border-radius: 50%;
  object-fit: cover;
  border: 2px solid var(--primary);
}

.author-info h4 {
  color: var(--text-light);
  margin-bottom: 6px;
  font-size: 1.1rem;
}

.author-bio {
  color: var(--text-muted);
  font-size: 0.9rem;
  line-height: 1.5;
}

.post-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 8px;
  margin: 20px 0;
}

.post-tag {
  background: var(--gradient-secondary);
  color: var(--white);
  padding: 6px 15px;
  border-radius: 20px;
  font-size: 0.8rem;
  font-weight: 500;
  text-decoration: none;
  transition: var(--transition);
}

.post-tag:hover {
  transform: translateY(-2px);
}

.back-to-home {
  display: inline-flex;
  align-items: center;
  gap: 8px;
  color: var(--primary);
  text-decoration: none;
  font-weight: 600;
  padding: 10px 20px;
  border: 2px solid var(--primary);
  border-radius: var(--radius);
  transition: var(--transition);
  margin-top: 20px;
}

.back-to-home:hover {
  background: var(--primary);
  color: var(--white);
  transform: translateX(-5px);
}

/* Comments Section */
.comments-section {
  background: rgba(30, 41, 59, 0.8);
  border-radius: var(--radius);
  padding: 30px;
  border: 1px solid rgba(255, 255, 255, 0.1);
  margin-top: 30px;
}

.comments-title {
  color: var(--text-light);
  margin-bottom: 20px;
  font-size: 1.3rem;
  padding-bottom: 12px;
  border-bottom: 1px solid rgba(255, 255, 255, 0.1);
}

/* Typography */
h1, h2, h3, h4, h5, h6 {
  font-weight: 700;
  line-height: 1.2;
  margin-bottom: 0.8rem;
  color: var(--text-light);
}

h1 {
  font-size: 2.8rem;
  letter-spacing: -0.5px;
}

h2 {
  font-size: 2.2rem;
  letter-spacing: -0.3px;
}

h3 {
  font-size: 1.6rem;
}

h4 {
  font-size: 1.2rem;
}

p {
  margin-bottom: 1.2rem;
  color: var(--text-light) !important;
  font-size: 1rem;
}

a {
  color: var(--primary);
  text-decoration: none;
  transition: var(--transition);
}

a:hover {
  color: var(--secondary);
}

/* Buttons */
.btn {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  padding: 12px 25px;
  border-radius: var(--radius);
  font-weight: 600;
  font-size: 0.95rem;
  text-decoration: none;
  transition: var(--transition);
  cursor: pointer;
  border: none;
  position: relative;
  overflow: hidden;
  z-index: 1;
  gap: 8px;
}

.btn::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(255,255,255,0.2), transparent);
  transition: left 0.6s;
  z-index: -1;
}

.btn:hover::before {
  left: 100%;
}

.btn-primary {
  background: var(--gradient-primary);
  color: var(--white);
  box-shadow: 0 4px 15px rgba(108, 99, 255, 0.3);
}

.btn-primary:hover {
  transform: translateY(-3px);
  box-shadow: 0 8px 25px rgba(108, 99, 255, 0.4);
}

.btn-secondary {
  background: transparent;
  color: var(--primary);
  border: 2px solid var(--primary);
}

.btn-secondary:hover {
  background: var(--primary);
  color: var(--white);
  transform: translateY(-3px);
  box-shadow: 0 4px 15px rgba(108, 99, 255, 0.3);
}

.btn-accent {
  background: var(--gradient-accent);
  color: var(--white);
  box-shadow: 0 4px 15px rgba(255, 101, 132, 0.3);
}

.btn-accent:hover {
  transform: translateY(-3px);
  box-shadow: 0 8px 25px rgba(255, 101, 132, 0.4);
}

/* Section Styling */
.section-header {
  text-align: center;
  margin-bottom: 20px;
}

.section-header h2 {
  font-size: 2.2rem;
  margin-bottom: 10px;
  position: relative;
  display: inline-block;
}

.section-header h2::after {
  content: '';
  position: absolute;
  bottom: -8px;
  left: 50%;
  transform: translateX(-50%);
  width: 250px;
  height: 2px;
  background: var(--gradient-primary);
  border-radius: 2px;
}

.section-subtitle {
  color: var(--text-muted);
  max-width: 600px;
  margin: 10px auto 0;
  font-size: 1rem;
  line-height: 1.5;
}

/* UPDATED Full Width Search Container - Smaller and Compact */
.search-container-wrapper-full {
  background: rgba(30, 41, 59, 0.8);
  border-radius: var(--radius);
  padding: 10px !important;
  border: 1px solid rgba(255, 255, 255, 0.1);
  width: 100% !important;
  max-width: 100% !important;
  margin: 5px 0 !important;
  box-shadow: var(--shadow);
  position: relative;
  z-index: 10;
}

.search-container-wrapper-full .search-header {
  text-align: center;
  margin-bottom: 6px !important;
  padding: 0 8px;
}

.search-container-wrapper-full .search-header h3 {
  color: var(--text-light);
  font-size: 1rem !important;
  margin-bottom: 4px;
  text-align: center;
  font-weight: 600;
}

.search-container-wrapper-full .search-header p {
  color: var(--text-muted);
  font-size: 0.85rem !important;
  margin-bottom: 0 !important;
  text-align: center;
  line-height: 1.2;
}

.search-container-wrapper-full .search-wrapper {
  display: flex;
  flex-direction: column;
  gap: 10px !important;
  align-items: center;
  max-width: 100%;
  margin: 0 auto;
  padding: 0 8px;
}

.search-container-wrapper-full .search-box {
  display: flex;
  gap: 10px !important;
  width: 100%;
  max-width: 100%;
}

.search-container-wrapper-full .search-input-wrapper {
  flex: 1;
  position: relative;
}

.search-container-wrapper-full .search-input {
  width: 100%;
  padding: 9px 12px 9px 35px !important;
  background: rgba(15, 23, 42, 0.8);
  border: 1px solid rgba(255, 255, 255, 0.1);
  border-radius: var(--radius);
  color: var(--text-light);
  font-size: 0.9rem !important;
  transition: var(--transition);
  backdrop-filter: blur(10px);
  height: 42px !important;
}

.search-container-wrapper-full .search-input:focus {
  outline: none;
  border-color: var(--primary);
  background: rgba(15, 23, 42, 0.9);
  box-shadow: 0 0 0 3px rgba(108, 99, 255, 0.1);
}

.search-container-wrapper-full .search-input::placeholder {
  color: var(--text-muted);
  font-size: 0.85rem !important;
}

.search-container-wrapper-full .search-icon {
  position: absolute;
  left: 12px;
  top: 50%;
  transform: translateY(-50%);
  color: var(--primary);
  font-size: 0.9rem !important;
}

.search-container-wrapper-full .search-btn {
  padding: 9px 18px !important;
  white-space: nowrap;
  font-size: 0.9rem !important;
  height: 42px !important;
  min-width: 90px;
}

.search-container-wrapper-full .search-filters {
  display: flex;
  gap: 6px !important;
  flex-wrap: wrap;
  justify-content: center;
  margin-top: 4px !important;
  width: 100%;
}

.search-container-wrapper-full .filter-btn {
  padding: 5px 10px !important;
  background: rgba(15, 23, 42, 0.5);
  border: 1px solid rgba(255, 255, 255, 0.1);
  border-radius: 14px !important;
  color: var(--text-light);
  font-size: 0.8rem !important;
  cursor: pointer;
  transition: var(--transition);
}

.search-container-wrapper-full .filter-btn:hover {
  background: rgba(108, 99, 255, 0.2);
  border-color: var(--primary);
}

.search-container-wrapper-full .filter-btn.active {
  background: var(--gradient-primary);
  border-color: transparent;
  color: var(--white);
}

.search-container-wrapper-full .search-stats {
  color: var(--text-muted);
  font-size: 0.8rem !important;
  margin-top: 6px;
  text-align: center;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 4px;
  width: 100%;
}

.search-container-wrapper-full .search-stats.highlight {
  color: var(--primary);
  font-weight: 600;
}

/* Profiles Section */
.profiles-section {
  background: var(--dark);
  position: relative;
}

/* Profile Grid */
.profile-grid {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 15px !important;
  max-width: 1200px;
  margin: 0 auto;
  margin-top: 20px;
}

.profile-card {
  height: 300px;
  perspective: 1000px;
  cursor: pointer;
  position: relative;
  display: block !important;
  opacity: 1;
  visibility: visible;
  transition: opacity 0.3s ease, visibility 0.3s ease;
}

.profile-card.hidden {
  display: none !important;
  opacity: 0;
  visibility: hidden;
  height: 0;
  overflow: hidden;
}

.profile-card-inner {
  position: relative;
  width: 100%;
  height: 100%;
  text-align: center;
  transition: transform 0.6s;
  transform-style: preserve-3d;
  border-radius: var(--radius);
  box-shadow: var(--shadow);
}

.profile-card:hover .profile-card-inner {
  transform: rotateY(180deg);
}

.profile-card-front,
.profile-card-back {
  position: absolute;
  width: 100%;
  height: 100%;
  -webkit-backface-visibility: hidden;
  backface-visibility: hidden;
  border-radius: var(--radius);
  padding: 12px !important;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.profile-card-front {
  background: rgba(30, 41, 59, 0.8);
  border: 1px solid rgba(255, 255, 255, 0.1);
  backdrop-filter: blur(10px);
}

.profile-card-back {
  background: var(--gradient-primary);
  transform: rotateY(180deg);
  color: var(--white);
  text-align: center;
}

.profile-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 100%;
  margin-bottom: 10px;
}

.profile-logo {
  width: 40px;
  height: 40px;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 16px;
  color: var(--white);
  box-shadow: 0 4px 15px rgba(0,0,0,0.2);
}

.profile-badge {
  background: var(--gradient-accent);
  color: var(--white);
  padding: 3px 8px;
  border-radius: 14px;
  font-size: 0.65rem;
  font-weight: 600;
  box-shadow: 0 4px 10px rgba(0,0,0,0.2);
}

.profile-name {
  font-size: 1.1rem;
  margin: 8px 0 4px;
  color: var(--text-light);
  font-weight: 700;
}

.profile-username {
  color: var(--text-muted);
  font-size: 0.8rem;
  margin-bottom: 12px;
}

.profile-stats {
  display: flex;
  gap: 12px;
  margin: 10px 0;
}

.profile-stat {
  text-align: center;
}

.profile-stat-number {
  font-size: 1.3rem;
  font-weight: 800;
  background: var(--gradient-primary);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  line-height: 1;
}

.profile-stat-label {
  font-size: 0.7rem;
  color: var(--text-muted);
  margin-top: 3px;
  text-transform: uppercase;
  letter-spacing: 0.5px;
}

.profile-cta {
  display: flex;
  align-items: center;
  gap: 5px;
  margin-top: 10px;
  color: var(--primary);
  font-size: 0.75rem;
  font-weight: 600;
  transition: var(--transition);
}

.profile-card:hover .profile-cta {
  color: var(--secondary);
}

.profile-cta i {
  transition: transform 0.3s;
}

.profile-card:hover .profile-cta i {
  transform: translateX(5px);
}

/* Platform-specific colors */
.github-logo { background: linear-gradient(135deg, #333 0%, #24292e 100%); }
.twitter-logo { background: linear-gradient(135deg, #1DA1F2 0%, #0d8bd9 100%); }
.linkedin-logo { background: linear-gradient(135deg, #0077B5 0%, #005582 100%); }
.instagram-logo { background: linear-gradient(45deg, #405DE6, #5851DB, #833AB4, #C13584, #E1306C, #FD1D1D); }
.facebook-logo { background: linear-gradient(135deg, #1877F2 0%, #0D5FDB 100%); }
.wordpress-logo { background: linear-gradient(135deg, #21759B 0%, #1A6080 100%); }
.blogger-logo { background: linear-gradient(135deg, #FF5722 0%, #E64A19 100%); }

/* Profile types */
[data-type="social"] .profile-badge {
  background: var(--gradient-accent);
}

[data-type="professional"] .profile-badge {
  background: linear-gradient(135deg, #36D1DC 0%, #5A52D5 100%);
}

[data-type="development"] .profile-badge {
  background: linear-gradient(135deg, #333 0%, #24292e 100%);
}

[data-type="blog"] .profile-badge {
  background: linear-gradient(135deg, #FF5722 0%, #E64A19 100%);
}

[data-type="business"] .profile-badge {
  background: linear-gradient(135deg, #4CAF50 0%, #388E3C 100%);
}

[data-type="visual"] .profile-badge {
  background: linear-gradient(135deg, #E1306C 0%, #833AB4 100%);
}

/* Skills Section */
.skills-section {
  background: var(--darker);
}

.skills-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
  gap: 15px !important;
  margin-top: 15px;
}

.skill-category {
  background: rgba(30, 41, 59, 0.8);
  border-radius: var(--radius);
  padding: 15px !important;
  border: 1px solid rgba(255, 255, 255, 0.1);
  transition: var(--transition);
}

.skill-category:hover {
  transform: translateY(-5px);
  border-color: var(--primary);
  box-shadow: var(--shadow-hover);
}

.skill-header {
  display: flex;
  align-items: center;
  gap: 12px;
  margin-bottom: 12px !important;
}

.skill-icon {
  width: 50px;
  height: 50px;
  border-radius: var(--radius);
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 1.2rem;
  color: var(--white);
  background: var(--gradient-primary);
}

.skill-header h3 {
  margin: 0;
  font-size: 1.1rem;
  color: var(--text-light);
}

.skill-list {
  display: flex;
  flex-direction: column;
  gap: 8px !important;
}

.skill-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.skill-name {
  font-weight: 500;
  color: var(--text-light);
}

.skill-level {
  display: flex;
  align-items: center;
  gap: 6px;
}

.skill-level-bar {
  width: 85px;
  height: 4px;
  background: rgba(255, 255, 255, 0.1);
  border-radius: 3px;
  overflow: hidden;
}

.skill-level-fill {
  height: 100%;
  background: var(--gradient-primary);
  border-radius: 3px;
  transition: width 0.8s ease;
}

/* Timeline Section */
.timeline-section {
  background: var(--dark);
}

.timeline {
  position: relative;
  max-width: 800px;
  margin: 0 auto;
}

.timeline::before {
  content: '';
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
  width: 2px;
  height: 100%;
  background: var(--gradient-primary);
}

.timeline-item {
  position: relative;
  margin-bottom: 20px !important;
  width: calc(50% - 20px);
}

.timeline-item:nth-child(odd) {
  left: 0;
}

.timeline-item:nth-child(even) {
  left: calc(50% + 20px);
}

.timeline-content {
  background: rgba(30, 41, 59, 0.8);
  border-radius: var(--radius);
  padding: 12px !important;
  border: 1px solid rgba(255, 255, 255, 0.1);
  position: relative;
  transition: var(--transition);
}

.timeline-content:hover {
  transform: translateY(-5px);
  border-color: var(--primary);
  box-shadow: var(--shadow);
}

.timeline-date {
  background: var(--gradient-primary);
  color: var(--white);
  padding: 4px 10px;
  border-radius: 14px;
  font-size: 0.8rem;
  font-weight: 500;
  display: inline-block;
  margin-bottom: 8px !important;
}

.timeline-content h3 {
  margin: 0 0 6px;
  font-size: 1.1rem;
  color: var(--text-light);
}

.timeline-content .company {
  color: var(--primary);
  font-weight: 600;
  margin-bottom: 6px;
  display: block;
}

/* UPDATED Projects Section - Blog thumbnail grid */
.projects-section {
  background: var(--darker);
  padding: 20px 0 !important;
}

/* Small blog thumbnail grid */
.project-grid {
  display: grid;
  grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
  gap: 20px !important;
}

/* Smaller blog post cards */
.project-card.blog-post {
  min-height: 350px;
  padding: 15px !important;
}

.project-card.blog-post .project-image-container {
  height: 160px;
  margin-bottom: 12px;
}

.project-card.blog-post .project-title {
  font-size: 1.2rem;
  margin-bottom: 8px;
}

.project-card.blog-post .project-description {
  font-size: 0.85rem;
  line-height: 1.4;
  margin-bottom: 12px;
  min-height: 50px;
}

.project-card.blog-post .project-meta {
  margin-top: 12px;
  padding-top: 10px;
  font-size: 0.75rem;
}

.project-card.blog-post::after {
  content: 'ðŸ“ BLOG';
  position: absolute;
  top: -6px;
  right: -6px;
  background: var(--gradient-accent);
  color: var(--white);
  padding: 2px 8px;
  border-radius: 14px;
  font-size: 0.6rem;
  font-weight: 700;
  z-index: 2;
  box-shadow: 0 4px 12px rgba(255, 101, 132, 0.3);
}

/* Regular project card styles */
.project-card {
  background: linear-gradient(145deg, rgba(30, 41, 59, 0.9), rgba(15, 23, 42, 0.9));
  border-radius: 12px;
  padding: 15px !important;
  border: 1px solid rgba(108, 99, 255, 0.2);
  transition: all 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275);
  cursor: pointer;
  position: relative;
  overflow: hidden;
  display: flex;
  flex-direction: column;
  height: 100%;
  backdrop-filter: blur(10px);
  box-shadow: var(--shadow);
}

.project-card::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(108, 99, 255, 0.1), transparent);
  transition: left 0.7s ease;
  z-index: 1;
}

.project-card:hover::before {
  left: 100%;
}

.project-card:hover {
  transform: translateY(-6px) scale(1.02);
  border-color: var(--primary);
  box-shadow: 
    0 15px 30px rgba(108, 99, 255, 0.2),
    0 0 15px rgba(108, 99, 255, 0.1);
}

.project-image-container {
  position: relative;
  width: 100%;
  height: 180px;
  border-radius: 8px;
  overflow: hidden;
  margin-bottom: 12px;
  background: var(--gradient-dark);
}

.project-image {
  width: 100%;
  height: 100%;
  object-fit: cover;
  transition: transform 0.7s ease;
}

.project-card:hover .project-image {
  transform: scale(1.1);
}

.project-image-overlay {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: linear-gradient(to bottom, transparent 60%, rgba(15, 23, 42, 0.9));
  display: flex;
  align-items: flex-end;
  padding: 10px;
  opacity: 0;
  transition: opacity 0.3s ease;
}

.project-card:hover .project-image-overlay {
  opacity: 1;
}

.project-category {
  background: var(--gradient-primary);
  color: var(--white);
  padding: 4px 8px;
  border-radius: 14px;
  font-size: 0.7rem;
  font-weight: 600;
}

.project-title {
  font-size: 1.2rem;
  margin-bottom: 8px;
  color: var(--text-light);
  line-height: 1.3;
  flex-grow: 1;
  font-weight: 700;
  background: linear-gradient(45deg, var(--text-light), var(--primary));
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
}

.project-description {
  color: var(--text-muted);
  margin-bottom: 12px;
  line-height: 1.4;
  font-size: 0.85rem;
  flex-grow: 1;
}

.project-tags {
  display: flex;
  gap: 5px;
  flex-wrap: wrap;
  margin-top: 10px;
}

.project-tag {
  background: linear-gradient(135deg, rgba(108, 99, 255, 0.2), rgba(54, 209, 220, 0.2));
  color: var(--primary);
  padding: 4px 10px;
  border-radius: 14px;
  font-size: 0.7rem;
  font-weight: 500;
  transition: all 0.3s ease;
  border: 1px solid rgba(108, 99, 255, 0.3);
}

.project-tag:hover {
  transform: translateY(-2px);
  background: var(--gradient-primary);
  color: var(--white);
  border-color: transparent;
  box-shadow: 0 4px 12px rgba(108, 99, 255, 0.3);
}

.project-meta {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 12px;
  padding-top: 10px;
  border-top: 1px solid rgba(255, 255, 255, 0.1);
  font-size: 0.75rem;
}

.project-date {
  display: flex;
  align-items: center;
  gap: 4px;
  color: var(--text-muted);
}

.project-read-more {
  color: var(--primary);
  font-weight: 600;
  transition: var(--transition);
  display: flex;
  align-items: center;
  gap: 4px;
  font-size: 0.8rem;
}

.project-card:hover .project-read-more {
  color: var(--secondary);
  transform: translateX(5px);
}

.project-card.blog-post:hover .project-title {
  background: linear-gradient(45deg, var(--primary), var(--secondary));
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
}

/* Hide regular blog section */
.blog-listing-section,
.blog-section {
  display: none !important;
}

/* Statistics Page Styles */
.statistics-section {
  background: var(--darker);
  min-height: 100vh;
  padding: 20px 0;
}

.statistics-content {
  max-width: 800px;
  margin: 0 auto;
  background: rgba(30, 41, 59, 0.8);
  border-radius: var(--radius);
  padding: 25px;
  border: 1px solid rgba(255, 255, 255, 0.1);
}

.stats-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(180px, 1fr));
  gap: 12px;
  margin-bottom: 25px;
}

.statistics-stat-item {
  text-align: center;
  padding: 15px;
  background: rgba(15, 23, 42, 0.5);
  border-radius: var(--radius);
  border: 1px solid rgba(255, 255, 255, 0.1);
  transition: var(--transition);
}

.statistics-stat-item:hover {
  transform: translateY(-5px);
  border-color: var(--primary);
  box-shadow: var(--shadow);
}

.statistics-stat-number {
  font-size: 2rem;
  font-weight: 800;
  color: var(--secondary);
  margin-bottom: 6px;
  display: block;
}

.statistics-stat-label {
  font-size: 0.85rem;
  color: var(--text-muted);
  text-transform: uppercase;
  letter-spacing: 1px;
}

/* Statistics Page Comment Form */
.statistics-section .comment-form {
  background: rgba(15, 23, 42, 0.5);
  border-radius: var(--radius);
  padding: 15px;
  border: 1px solid rgba(255, 255, 255, 0.1);
  margin-top: 20px;
}

.statistics-section .comment-form h4 {
  color: var(--text-light);
  margin-bottom: 12px;
  font-size: 1.1rem;
}

/* Newsletter Section */
.newsletter-section {
  background: var(--gradient-dark);
  color: var(--white);
  text-align: center;
  padding: 20px 0 !important;
}

.newsletter-section .section-header h2,
.newsletter-section .section-subtitle {
  color: var(--white);
}

.newsletter-section .section-header h2::after {
  background: var(--white);
}

.newsletter-form {
  max-width: 500px;
  margin: 15px auto 0 !important;
  display: flex;
  gap: 10px;
}

.newsletter-input {
  flex: 1;
  padding: 12px 15px;
  border: 2px solid rgba(255, 255, 255, 0.2);
  border-radius: var(--radius);
  background: rgba(255, 255, 255, 0.1);
  color: var(--white);
  font-size: 0.9rem;
  backdrop-filter: blur(10px);
}

.newsletter-input::placeholder {
  color: rgba(255, 255, 255, 0.6);
}

.newsletter-input:focus {
  outline: none;
  border-color: var(--white);
  background: rgba(255, 255, 255, 0.15);
}

/* Contact Section */
.contact-section {
  background: var(--dark);
  text-align: center;
}

.contact-content {
  max-width: 900px;
  margin: 0 auto;
}

.contact-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
  gap: 20px !important;
  margin-top: 20px !important;
}

.contact-info {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(260px, 1fr));
  gap: 15px !important;
}

.contact-item {
  padding: 15px !important;
  background: rgba(30, 41, 59, 0.8);
  border-radius: var(--radius);
  transition: var(--transition);
  border: 1px solid rgba(255, 255, 255, 0.1);
}

.contact-item:hover {
  transform: translateY(-6px);
  border-color: var(--primary);
  box-shadow: var(--shadow-hover);
}

.contact-icon {
  font-size: 2rem;
  color: var(--primary);
  margin-bottom: 10px !important;
}

.contact-item h3 {
  margin-bottom: 6px;
  font-size: 1.1rem;
  color: var(--text-light);
}

.contact-item p {
  color: var(--text-muted);
  font-size: 0.9rem;
}

/* Contact Form */
.contact-form-wrapper {
  background: rgba(30, 41, 59, 0.8);
  border-radius: var(--radius);
  padding: 20px !important;
  border: 1px solid rgba(255, 255, 255, 0.1);
}

.contact-form-wrapper h3 {
  text-align: center;
  margin-bottom: 15px !important;
  color: var(--text-light);
  font-size: 1.2rem;
}

.contact-form {
  display: flex;
  flex-direction: column;
  gap: 10px !important;
}

.form-group {
  display: flex;
  flex-direction: column;
  gap: 5px;
}

.form-group label {
  color: var(--text-light);
  font-weight: 500;
  font-size: 0.85rem;
}

.form-control {
  padding: 10px 12px;
  border: 2px solid rgba(255, 255, 255, 0.1);
  border-radius: var(--radius);
  background: rgba(255, 255, 255, 0.05);
  color: var(--text-light);
  font-size: 0.9rem;
  transition: var(--transition);
  backdrop-filter: blur(10px);
}

.form-control:focus {
  outline: none;
  border-color: var(--primary);
  background: rgba(255, 255, 255, 0.08);
  box-shadow: 0 0 0 3px rgba(108, 99, 255, 0.1);
}

.form-control::placeholder {
  color: rgba(255, 255, 255, 0.4);
}

textarea.form-control {
  min-height: 120px;
  resize: vertical;
}

.submit-btn {
  margin-top: 6px;
}

.social-links-large {
  display: flex;
  justify-content: center;
  gap: 12px;
  margin-top: 20px !important;
}

.social-link-large {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  width: 40px;
  height: 40px;
  background: rgba(30, 41, 59, 0.8);
  border-radius: 50%;
  color: var(--text-light);
  font-size: 1rem;
  transition: var(--transition);
  border: 1px solid rgba(255, 255, 255, 0.1);
}

.social-link-large:hover {
  background: var(--gradient-primary);
  color: var(--white);
  transform: translateY(-5px);
  border-color: transparent;
  box-shadow: var(--shadow);
}

/* Header - Removed space */
.header-fixed {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  z-index: 1000;
  background: rgba(15, 23, 42, 0.95);
  backdrop-filter: blur(10px);
  padding: 10px 0;
  border-bottom: 1px solid rgba(255, 255, 255, 0.1);
  box-shadow: 0 2px 20px rgba(0, 0, 0, 0.2);
}

.header-container {
  display: flex;
  justify-content: space-between;
  align-items: center;
  max-width: 1200px;
  margin: 0 auto;
  padding: 0 15px;
}

.logo {
  display: flex;
  align-items: center;
}

.logo-text {
  font-size: 1.3rem;
  font-weight: 800;
  background: var(--gradient-primary);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
}

/* Logo Styles */
.site-logo {
  max-height: 40px !important;
  width: auto !important;
  display: block !important;
}

.nav-menu {
  display: flex;
  list-style: none;
  gap: 20px;
  margin: 0;
  padding: 0;
}

.nav-link {
  text-decoration: none;
  color: var(--text-light);
  font-weight: 500;
  font-size: 0.85rem;
  transition: var(--transition);
  position: relative;
  padding: 4px 0;
}

.nav-link:hover {
  color: var(--primary);
}

.nav-link::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 0;
  width: 0;
  height: 2px;
  background: var(--gradient-primary);
  transition: var(--transition);
}

.nav-link:hover::after {
  width: 100%;
}

.nav-link.active {
  color: var(--primary);
}

.nav-link.active::after {
  width: 100%;
}

.menu-toggle {
  display: none;
  cursor: pointer;
  font-size: 1.2rem;
  color: var(--text-light);
  z-index: 1001;
}

/* Footer */
.footer {
  background: var(--darker);
  color: var(--white);
  padding: 25px 0 12px !important;
  text-align: center;
  border-top: 1px solid rgba(255, 255, 255, 0.1);
}

.footer-content {
  max-width: 600px;
  margin: 0 auto;
}

.footer-logo {
  font-size: 1.4rem;
  font-weight: 800;
  margin-bottom: 10px !important;
  background: var(--gradient-primary);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
}

.footer-about p {
  color: var(--text-muted);
  margin-bottom: 12px !important;
  line-height: 1.5;
  font-size: 0.9rem;
}

.footer-bottom {
  padding-top: 12px !important;
  border-top: 1px solid rgba(255, 255, 255, 0.1);
  color: var(--text-muted);
  font-size: 0.8rem;
  margin-top: 12px !important;
}

/* Modal Styles */
.view-modal {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.9);
  display: none;
  justify-content: center;
  align-items: center;
  z-index: 9999;
  padding: 12px;
}

.view-modal.active {
  display: flex;
  animation: modalFadeIn 0.3s ease;
}

@keyframes modalFadeIn {
  from {
    opacity: 0;
  }
  to {
    opacity: 1;
  }
}

.modal-content {
  background: var(--dark);
  border-radius: var(--radius);
  width: 100%;
  max-width: 700px;
  max-height: 85vh;
  overflow-y: auto;
  position: relative;
  border: 1px solid rgba(255, 255, 255, 0.1);
  animation: modalSlideIn 0.3s ease;
}

@keyframes modalSlideIn {
  from {
    opacity: 0;
    transform: translateY(-30px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.modal-header {
  padding: 12px 15px !important;
  background: var(--gradient-dark);
  color: var(--white);
  display: flex;
  justify-content: space-between;
  align-items: center;
  position: sticky;
  top: 0;
  z-index: 1;
  border-bottom: 1px solid rgba(255, 255, 255, 0.1);
}

.modal-header h2 {
  color: var(--white);
  margin: 0;
  font-size: 1.4rem;
}

.close-modal {
  background: none;
  border: none;
  color: var(--white);
  font-size: 2rem;
  cursor: pointer;
  line-height: 1;
  transition: var(--transition);
  width: 30px;
  height: 30px;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 50%;
}

.close-modal:hover {
  transform: rotate(90deg);
  background: rgba(255, 255, 255, 0.1);
}

.modal-body {
  padding: 15px !important;
}

.modal-image {
  width: 100%;
  height: 220px;
  object-fit: cover;
  border-radius: var(--radius);
  margin-bottom: 12px !important;
  box-shadow: var(--shadow);
}

.modal-description {
  font-size: 0.95rem;
  line-height: 1.5;
  color: var(--text-light);
  margin-bottom: 12px !important;
}

.modal-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 6px;
}

.modal-tag {
  background: var(--gradient-secondary);
  color: var(--white);
  padding: 5px 12px;
  border-radius: 14px;
  font-size: 0.8rem;
  font-weight: 500;
  transition: var(--transition);
}

.modal-tag:hover {
  transform: translateY(-2px);
}

/* Loading Spinner */
.loading-spinner {
  display: none;
  text-align: center;
  padding: 25px;
}

.loading-spinner.active {
  display: block;
}

.spinner {
  width: 30px;
  height: 30px;
  border: 3px solid rgba(255, 255, 255, 0.1);
  border-top-color: var(--primary);
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin: 0 auto 12px;
}

@keyframes spin {
  to { transform: rotate(360deg); }
}

/* Pagination */
.pagination {
  display: flex;
  justify-content: center;
  gap: 6px;
  margin-top: 20px !important;
}

.pagination a {
  padding: 6px 12px;
  background: rgba(30, 41, 59, 0.8);
  color: var(--text-light);
  text-decoration: none;
  border-radius: var(--radius);
  transition: var(--transition);
  border: 1px solid rgba(255, 255, 255, 0.1);
  font-size: 0.85rem;
}

.pagination a:hover,
.pagination a.active {
  background: var(--gradient-primary);
  color: var(--white);
  border-color: transparent;
}

/* No Results Message */
.no-results {
  text-align: center;
  padding: 20px !important;
  color: var(--text-muted);
  font-size: 0.9rem !important;
  display: none;
  grid-column: 1 / -1;
}

.no-results.show {
  display: block;
}

.no-results i {
  font-size: 2rem !important;
  margin-bottom: 10px;
  color: var(--text-muted);
  opacity: 0.5;
}

/* Dark Mode Support */
@media (prefers-color-scheme: light) {
  :root {
    --dark: #F8FAFC;
    --darker: #F1F5F9;
    --light: #0F172A;
    --gray: #64748B;
    --gray-light: #E2E8F0;
    --text-light: #0F172A;
    --text-dark: #F8FAFC;
    --text-muted: #64748B;
  }
  
  .post-content * {
    color: var(--text-light) !important;
  }
  
  .post-content p {
    color: var(--text-light) !important;
  }
  
  .header-fixed {
    background: rgba(248, 250, 252, 0.95);
    border-bottom: 1px solid rgba(15, 23, 42, 0.1);
  }
  
  .nav-link {
    color: var(--text-light);
  }
  
  .form-control {
    background: rgba(15, 23, 42, 0.05);
    border-color: rgba(15, 23, 42, 0.1);
    color: var(--text-light);
  }
  
  .form-control::placeholder {
    color: rgba(15, 23, 42, 0.5);
  }
}

/* Print Styles */
@media print {
  .hero-section,
  .footer,
  .contact-section,
  .social-links-large,
  .menu-toggle,
  .nav-menu {
    display: none !important;
  }
  
  .container {
    max-width: 100%;
  }
  
  section {
    padding: 10px 0 !important;
  }
  
  body {
    color: #000;
    background: #fff;
  }
  
  .post-content * {
    color: #000 !important;
  }
}

/* Responsive Design */
@media (max-width: 1200px) {
  .profile-grid {
    grid-template-columns: repeat(4, 1fr);
    gap: 12px;
  }
  
  .project-grid {
    grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
  }
}

@media (max-width: 992px) {
  .profile-grid {
    grid-template-columns: repeat(3, 1fr);
  }
  
  .menu-toggle {
    display: block;
  }
  
  .nav-menu {
    position: fixed;
    top: 0;
    left: -100%;
    width: 240px;
    height: 100vh;
    background: var(--dark);
    flex-direction: column;
    align-items: flex-start;
    justify-content: flex-start;
    padding: 80px 20px 20px;
    transition: var(--transition);
    box-shadow: var(--shadow-hover);
    z-index: 1000;
  }
  
  .nav-menu.active {
    left: 0;
  }
  
  .nav-link {
    font-size: 0.95rem;
    padding: 10px 0;
    width: 100%;
  }
  
  h1 {
    font-size: 2.2rem;
  }
  
  h2 {
    font-size: 1.8rem;
  }
  
  .timeline::before {
    left: 20px;
  }
  
  .timeline-item {
    width: calc(100% - 50px);
    left: 50px !important;
  }
  
  .contact-grid {
    grid-template-columns: 1fr;
  }
  
  .search-container-wrapper-full .search-box {
    flex-direction: column;
  }
  
  .search-container-wrapper-full .search-btn {
    width: 100%;
  }
}

@media (max-width: 768px) {
  .profile-grid {
    grid-template-columns: repeat(2, 1fr);
  }
  
  section {
    padding: 15px 0 !important;
  }
  
  .post-container {
    padding: 15px !important;
  }
  
  .post-title {
    font-size: 1.6rem;
  }
  
  .comments-section {
    padding: 15px !important;
  }
  
  .project-grid {
    grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
    gap: 15px !important;
  }
  
  .newsletter-form {
    flex-direction: column;
  }
  
  .contact-form-wrapper {
    padding: 15px !important;
  }
  
  h1 {
    font-size: 1.8rem;
  }
  
  h2 {
    font-size: 1.6rem;
  }
  
  .section-header h2 {
    font-size: 1.6rem;
  }
  
  .search-container-wrapper-full .search-filters {
    justify-content: center;
