/* =========================================
   PROFESSIONAL PORTFOLIO THEME - COMPREHENSIVE
   Version: 3.0 | Professional Edition
   ========================================= */

/* CSS Variables - Professional Dark Theme */
:root {
  /* Primary Colors */
  --primary: #6C63FF;
  --primary-dark: #5A52D5;
  --primary-light: #8A84FF;
  --secondary: #36D1DC;
  --secondary-dark: #2AB7C1;
  --accent: #FF6584;
  --accent-dark: #E65574;
  
  /* Neutral Colors */
  --dark: #0F172A;
  --darker: #020617;
  --light: #F1F5F9;
  --gray-100: #F8FAFC;
  --gray-200: #E2E8F0;
  --gray-300: #CBD5E1;
  --gray-400: #94A3B8;
  --gray-500: #64748B;
  --gray-600: #475569;
  --gray-700: #334155;
  --gray-800: #1E293B;
  --gray-900: #0F172A;
  
  /* Text Colors */
  --text-primary: #F8FAFC;
  --text-secondary: #CBD5E1;
  --text-muted: #94A3B8;
  --text-light: #FFFFFF;
  
  /* Background Colors */
  --bg-primary: #020617;
  --bg-secondary: #0F172A;
  --bg-card: rgba(30, 41, 59, 0.8);
  --bg-glass: rgba(30, 41, 59, 0.7);
  
  /* Gradients */
  --gradient-primary: linear-gradient(135deg, #6C63FF 0%, #5A52D5 100%);
  --gradient-secondary: linear-gradient(135deg, #36D1DC 0%, #6C63FF 100%);
  --gradient-accent: linear-gradient(135deg, #FF6584 0%, #FF8E53 100%);
  --gradient-dark: linear-gradient(135deg, #0F172A 0%, #1E293B 100%);
  --gradient-light: linear-gradient(135deg, #F1F5F9 0%, #E2E8F0 100%);
  --gradient-glass: linear-gradient(135deg, rgba(108, 99, 255, 0.1) 0%, rgba(54, 209, 220, 0.1) 100%);
  
  /* Shadows */
  --shadow-sm: 0 1px 3px rgba(0, 0, 0, 0.12);
  --shadow-md: 0 4px 20px rgba(0, 0, 0, 0.15);
  --shadow-lg: 0 8px 30px rgba(0, 0, 0, 0.2);
  --shadow-xl: 0 20px 50px rgba(0, 0, 0, 0.3);
  --shadow-primary: 0 4px 15px rgba(108, 99, 255, 0.3);
  --shadow-accent: 0 4px 15px rgba(255, 101, 132, 0.3);
  
  /* Transitions */
  --transition-fast: all 0.2s cubic-bezier(0.4, 0, 0.2, 1);
  --transition-normal: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  --transition-slow: all 0.5s cubic-bezier(0.4, 0, 0.2, 1);
  
  /* Border Radius */
  --radius-sm: 6px;
  --radius-md: 12px;
  --radius-lg: 16px;
  --radius-xl: 20px;
  --radius-full: 50%;
  
  /* Spacing */
  --space-xs: 4px;
  --space-sm: 8px;
  --space-md: 16px;
  --space-lg: 24px;
  --space-xl: 32px;
  --space-2xl: 48px;
  --space-3xl: 64px;
  
  /* Typography */
  --font-sans: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
  --font-mono: 'JetBrains Mono', 'Cascadia Code', 'Fira Code', monospace;
  --font-size-xs: 0.75rem;
  --font-size-sm: 0.875rem;
  --font-size-base: 1rem;
  --font-size-lg: 1.125rem;
  --font-size-xl: 1.25rem;
  --font-size-2xl: 1.5rem;
  --font-size-3xl: 1.875rem;
  --font-size-4xl: 2.25rem;
  --font-size-5xl: 3rem;
  --font-size-6xl: 3.75rem;
  
  /* Z-index */
  --z-dropdown: 1000;
  --z-sticky: 1020;
  --z-fixed: 1030;
  --z-modal-backdrop: 1040;
  --z-modal: 1050;
  --z-popover: 1060;
  --z-tooltip: 1070;
}

/* =========================================
   RESET & BASE STYLES
   ========================================= */
* {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
}

html {
  scroll-behavior: smooth;
  scroll-padding-top: 80px;
}

body {
  font-family: var(--font-sans);
  line-height: 1.7;
  color: var(--text-primary);
  background-color: var(--bg-primary);
  overflow-x: hidden;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
}

body.modal-open,
body.menu-open {
  overflow: hidden;
}

.container {
  width: 100%;
  max-width: 1280px;
  margin: 0 auto;
  padding: 0 var(--space-lg);
}

.container-narrow {
  max-width: 800px;
  margin: 0 auto;
  padding: 0 var(--space-lg);
}

.container-wide {
  max-width: 1440px;
  margin: 0 auto;
  padding: 0 var(--space-lg);
}

/* =========================================
   TYPOGRAPHY
   ========================================= */
h1, h2, h3, h4, h5, h6 {
  font-weight: 700;
  line-height: 1.2;
  margin-bottom: var(--space-md);
  color: var(--text-primary);
}

h1 {
  font-size: var(--font-size-5xl);
  letter-spacing: -0.5px;
}

h2 {
  font-size: var(--font-size-4xl);
  letter-spacing: -0.3px;
}

h3 {
  font-size: var(--font-size-3xl);
}

h4 {
  font-size: var(--font-size-2xl);
}

h5 {
  font-size: var(--font-size-xl);
}

h6 {
  font-size: var(--font-size-lg);
}

p {
  margin-bottom: var(--space-md);
  color: var(--text-secondary);
  font-size: var(--font-size-base);
}

.lead {
  font-size: var(--font-size-xl);
  color: var(--text-secondary);
  line-height: 1.6;
}

.text-gradient {
  background: var(--gradient-primary);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
}

.text-primary { color: var(--primary); }
.text-secondary { color: var(--secondary); }
.text-accent { color: var(--accent); }
.text-muted { color: var(--text-muted); }
.text-light { color: var(--text-light); }

/* =========================================
   BUTTONS
   ========================================= */
.btn {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  gap: var(--space-sm);
  padding: var(--space-md) var(--space-xl);
  border-radius: var(--radius-md);
  font-weight: 600;
  font-size: var(--font-size-base);
  text-decoration: none;
  transition: var(--transition-normal);
  cursor: pointer;
  border: none;
  position: relative;
  overflow: hidden;
  z-index: 1;
  white-space: nowrap;
}

.btn::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(255,255,255,0.2), transparent);
  transition: left 0.6s;
  z-index: -1;
}

.btn:hover::before {
  left: 100%;
}

.btn-primary {
  background: var(--gradient-primary);
  color: var(--text-light);
  box-shadow: var(--shadow-primary);
}

.btn-primary:hover {
  transform: translateY(-3px);
  box-shadow: 0 8px 25px rgba(108, 99, 255, 0.4);
}

.btn-secondary {
  background: transparent;
  color: var(--primary);
  border: 2px solid var(--primary);
}

.btn-secondary:hover {
  background: var(--primary);
  color: var(--text-light);
  transform: translateY(-3px);
  box-shadow: var(--shadow-primary);
}

.btn-accent {
  background: var(--gradient-accent);
  color: var(--text-light);
  box-shadow: var(--shadow-accent);
}

.btn-accent:hover {
  transform: translateY(-3px);
  box-shadow: 0 8px 25px rgba(255, 101, 132, 0.4);
}

.btn-outline {
  background: transparent;
  color: var(--text-primary);
  border: 2px solid var(--gray-700);
}

.btn-outline:hover {
  border-color: var(--primary);
  color: var(--primary);
  transform: translateY(-3px);
}

.btn-sm {
  padding: var(--space-sm) var(--space-lg);
  font-size: var(--font-size-sm);
}

.btn-lg {
  padding: var(--space-lg) var(--space-2xl);
  font-size: var(--font-size-lg);
}

.btn-icon {
  width: 40px;
  height: 40px;
  padding: 0;
  border-radius: var(--radius-full);
}

/* =========================================
   SECTION STYLES
   ========================================= */
section {
  width: 100%;
  position: relative;
  padding: var(--space-3xl) 0;
}

.section-sm { padding: var(--space-xl) 0; }
.section-lg { padding: var(--space-3xl) 0; }
.section-xl { padding: var(--space-3xl) 0; }

.section-header {
  text-align: center;
  margin-bottom: var(--space-3xl);
  max-width: 800px;
  margin-left: auto;
  margin-right: auto;
}

.section-header h2 {
  font-size: var(--font-size-4xl);
  margin-bottom: var(--space-md);
  position: relative;
  display: inline-block;
}

.section-header h2::after {
  content: '';
  position: absolute;
  bottom: -8px;
  left: 50%;
  transform: translateX(-50%);
  width: 250px;
  height: 2px;
  background: var(--gradient-primary);
  border-radius: 2px;
}

.section-subtitle {
  color: var(--text-muted);
  font-size: var(--font-size-lg);
  line-height: 1.6;
}

.section-number {
  display: inline-block;
  width: 40px;
  height: 40px;
  background: var(--gradient-primary);
  color: var(--text-light);
  border-radius: var(--radius-full);
  display: flex;
  align-items: center;
  justify-content: center;
  font-weight: 700;
  font-size: var(--font-size-lg);
  margin-bottom: var(--space-lg);
}

/* =========================================
   HEADER & NAVIGATION
   ========================================= */
.header-fixed {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  z-index: var(--z-fixed);
  background: rgba(15, 23, 42, 0.95);
  backdrop-filter: blur(10px);
  padding: var(--space-md) 0;
  border-bottom: 1px solid rgba(255, 255, 255, 0.1);
  box-shadow: var(--shadow-md);
  transition: var(--transition-normal);
}

.header-fixed.scrolled {
  padding: var(--space-sm) 0;
  background: rgba(15, 23, 42, 0.98);
}

.header-container {
  display: flex;
  justify-content: space-between;
  align-items: center;
  max-width: 1280px;
  margin: 0 auto;
  padding: 0 var(--space-lg);
}

.logo {
  display: flex;
  align-items: center;
  gap: var(--space-md);
  text-decoration: none;
}

.site-logo {
  height: 40px;
  width: auto;
  border-radius: var(--radius-md);
}

.logo-text {
  font-size: var(--font-size-xl);
  font-weight: 800;
  background: var(--gradient-primary);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
}

.nav-menu {
  display: flex;
  list-style: none;
  gap: var(--space-xl);
  margin: 0;
  padding: 0;
}

.nav-link {
  text-decoration: none;
  color: var(--text-primary);
  font-weight: 500;
  font-size: var(--font-size-base);
  transition: var(--transition-normal);
  position: relative;
  padding: var(--space-xs) 0;
}

.nav-link:hover {
  color: var(--primary);
}

.nav-link::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 0;
  width: 0;
  height: 2px;
  background: var(--gradient-primary);
  transition: var(--transition-normal);
}

.nav-link:hover::after,
.nav-link.active::after {
  width: 100%;
}

.nav-link.active {
  color: var(--primary);
}

.menu-toggle {
  display: none;
  cursor: pointer;
  font-size: var(--font-size-xl);
  color: var(--text-primary);
  z-index: var(--z-fixed);
  transition: var(--transition-normal);
}

.menu-toggle:hover {
  color: var(--primary);
}

/* =========================================
   HERO SECTION - PROFESSIONAL
   ========================================= */
.hero-section {
  position: relative;
  min-height: 100vh;
  display: flex;
  align-items: center;
  padding: var(--space-3xl) 0;
  background: var(--bg-primary);
  overflow: hidden;
}

.hero-canvas {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 1;
}

.hero-content {
  position: relative;
  z-index: 2;
  max-width: 1200px;
  margin: 0 auto;
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: var(--space-3xl);
  align-items: center;
}

.hero-text {
  animation: fadeSlideUp 1s ease-out forwards;
  opacity: 0;
  transform: translateY(30px);
}

.hero-badge {
  display: inline-flex;
  align-items: center;
  gap: var(--space-sm);
  padding: var(--space-sm) var(--space-lg);
  background: rgba(108, 99, 255, 0.15);
  color: var(--secondary);
  border: 1px solid rgba(54, 209, 220, 0.3);
  border-radius: 50px;
  font-size: var(--font-size-sm);
  font-weight: 600;
  margin-bottom: var(--space-xl);
  text-transform: uppercase;
  letter-spacing: 1px;
}

.hero-title {
  font-size: var(--font-size-6xl);
  line-height: 1.1;
  margin-bottom: var(--space-xl);
}

.hero-title span {
  background: var(--gradient-secondary);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
}

.hero-subtitle {
  font-size: var(--font-size-xl);
  color: var(--text-secondary);
  margin-bottom: var(--space-2xl);
  line-height: 1.6;
}

.hero-stats {
  display: flex;
  gap: var(--space-lg);
  margin-bottom: var(--space-2xl);
  flex-wrap: wrap;
}

.hero-stat {
  text-align: center;
  padding: var(--space-lg);
  background: var(--bg-card);
  border: 1px solid rgba(255, 255, 255, 0.1);
  border-radius: var(--radius-md);
  backdrop-filter: blur(10px);
  transition: var(--transition-normal);
  min-width: 120px;
}

.hero-stat:hover {
  transform: translateY(-5px);
  border-color: var(--primary);
  box-shadow: var(--shadow-md);
}

.hero-stat-number {
  font-size: var(--font-size-3xl);
  font-weight: 800;
  color: var(--primary);
  display: block;
  line-height: 1;
  margin-bottom: var(--space-xs);
}

.hero-stat-label {
  font-size: var(--font-size-sm);
  color: var(--text-muted);
  text-transform: uppercase;
  letter-spacing: 1px;
}

.hero-buttons {
  display: flex;
  gap: var(--space-lg);
  flex-wrap: wrap;
}

.hero-visual {
  position: relative;
  animation: floatIn 1.2s ease-out 0.3s forwards;
  opacity: 0;
  transform: translateY(30px);
}

.hero-card {
  position: relative;
  width: 100%;
  max-width: 450px;
  height: 500px;
  background: var(--bg-glass);
  border-radius: var(--radius-xl);
  border: 1px solid rgba(255, 255, 255, 0.1);
  backdrop-filter: blur(20px);
  overflow: hidden;
  box-shadow: var(--shadow-xl);
  animation: cardFloat 6s ease-in-out infinite;
}

.hero-card-blob {
  position: absolute;
  width: 300px;
  height: 300px;
  border-radius: var(--radius-full);
  filter: blur(60px);
  opacity: 0.6;
  z-index: 1;
}

.blob-1 {
  background: var(--primary);
  top: -60px;
  left: -60px;
  animation: blobMove 8s infinite alternate;
}

.blob-2 {
  background: var(--secondary);
  bottom: -60px;
  right: -60px;
  animation: blobMove 10s infinite alternate-reverse;
}

.hero-image {
  width: 100%;
  height: 100%;
  object-fit: cover;
  border-radius: var(--radius-lg);
  position: relative;
  z-index: 2;
}

.hero-floating-badge {
  position: absolute;
  z-index: 3;
  background: rgba(15, 23, 42, 0.9);
  border: 1px solid rgba(255, 255, 255, 0.1);
  backdrop-filter: blur(10px);
  padding: var(--space-md);
  border-radius: var(--radius-md);
  display: flex;
  align-items: center;
  gap: var(--space-sm);
  color: var(--text-light);
  font-size: var(--font-size-sm);
  font-weight: 600;
  box-shadow: var(--shadow-md);
}

.hero-fb-1 { top: 30px; left: -25px; animation: badgeFloat 4s ease-in-out infinite 0s; }
.hero-fb-2 { bottom: 50px; right: -15px; animation: badgeFloat 4.5s ease-in-out infinite 1s; }

.hero-floating-icon {
  width: 32px;
  height: 32px;
  border-radius: var(--radius-full);
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: var(--font-size-sm);
  color: var(--text-light);
}

/* =========================================
   SEARCH COMPONENT - COMPACT
   ========================================= */
.search-container {
  background: var(--bg-card);
  border-radius: var(--radius-md);
  padding: var(--space-lg);
  border: 1px solid rgba(255, 255, 255, 0.1);
  box-shadow: var(--shadow-md);
  margin-bottom: var(--space-xl);
}

.search-header {
  text-align: center;
  margin-bottom: var(--space-lg);
}

.search-header h3 {
  color: var(--text-primary);
  font-size: var(--font-size-xl);
  margin-bottom: var(--space-xs);
}

.search-header p {
  color: var(--text-muted);
  font-size: var(--font-size-sm);
}

.search-wrapper {
  display: flex;
  flex-direction: column;
  gap: var(--space-md);
}

.search-box {
  display: flex;
  gap: var(--space-md);
  width: 100%;
}

.search-input-wrapper {
  flex: 1;
  position: relative;
}

.search-input {
  width: 100%;
  padding: var(--space-md) var(--space-lg) var(--space-md) var(--space-xl);
  background: rgba(15, 23, 42, 0.8);
  border: 1px solid rgba(255, 255, 255, 0.1);
  border-radius: var(--radius-md);
  color: var(--text-primary);
  font-size: var(--font-size-base);
  transition: var(--transition-normal);
  backdrop-filter: blur(10px);
}

.search-input:focus {
  outline: none;
  border-color: var(--primary);
  background: rgba(15, 23, 42, 0.9);
  box-shadow: 0 0 0 3px rgba(108, 99, 255, 0.1);
}

.search-input::placeholder {
  color: var(--text-muted);
}

.search-icon {
  position: absolute;
  left: var(--space-md);
  top: 50%;
  transform: translateY(-50%);
  color: var(--primary);
}

.search-filters {
  display: flex;
  gap: var(--space-sm);
  flex-wrap: wrap;
  justify-content: center;
}

.filter-btn {
  padding: var(--space-xs) var(--space-md);
  background: rgba(15, 23, 42, 0.5);
  border: 1px solid rgba(255, 255, 255, 0.1);
  border-radius: 20px;
  color: var(--text-primary);
  font-size: var(--font-size-sm);
  cursor: pointer;
  transition: var(--transition-normal);
}

.filter-btn:hover {
  background: rgba(108, 99, 255, 0.2);
  border-color: var(--primary);
}

.filter-btn.active {
  background: var(--gradient-primary);
  border-color: transparent;
  color: var(--text-light);
}

.search-stats {
  color: var(--text-muted);
  font-size: var(--font-size-sm);
  text-align: center;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: var(--space-xs);
}

.search-stats .highlight {
  color: var(--primary);
  font-weight: 600;
}

/* =========================================
   PROFILES SECTION
   ========================================= */
.profiles-section {
  background: var(--bg-secondary);
}

.profile-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
  gap: var(--space-lg);
}

.profile-card {
  height: 320px;
  perspective: 1000px;
  cursor: pointer;
  position: relative;
}

.profile-card.hidden {
  display: none;
}

.profile-card-inner {
  position: relative;
  width: 100%;
  height: 100%;
  text-align: center;
  transition: transform 0.6s;
  transform-style: preserve-3d;
  border-radius: var(--radius-lg);
  box-shadow: var(--shadow-md);
}

.profile-card:hover .profile-card-inner {
  transform: rotateY(180deg);
}

.profile-card-front,
.profile-card-back {
  position: absolute;
  width: 100%;
  height: 100%;
  -webkit-backface-visibility: hidden;
  backface-visibility: hidden;
  border-radius: var(--radius-lg);
  padding: var(--space-lg);
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.profile-card-front {
  background: var(--bg-card);
  border: 1px solid rgba(255, 255, 255, 0.1);
  backdrop-filter: blur(10px);
}

.profile-card-back {
  background: var(--gradient-primary);
  transform: rotateY(180deg);
  color: var(--text-light);
  text-align: center;
}

.profile-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 100%;
  margin-bottom: var(--space-md);
}

.profile-logo {
  width: 48px;
  height: 48px;
  border-radius: var(--radius-full);
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: var(--font-size-lg);
  color: var(--text-light);
  box-shadow: var(--shadow-md);
}

.profile-badge {
  padding: var(--space-xs) var(--space-sm);
  border-radius: 20px;
  font-size: var(--font-size-xs);
  font-weight: 600;
  box-shadow: var(--shadow-sm);
}

.profile-name {
  font-size: var(--font-size-lg);
  margin: var(--space-md) 0 var(--space-xs);
  color: var(--text-primary);
  font-weight: 700;
}

.profile-username {
  color: var(--text-muted);
  font-size: var(--font-size-sm);
  margin-bottom: var(--space-md);
}

.profile-stats {
  display: flex;
  gap: var(--space-lg);
  margin: var(--space-md) 0;
}

.profile-stat {
  text-align: center;
}

.profile-stat-number {
  font-size: var(--font-size-xl);
  font-weight: 800;
  background: var(--gradient-primary);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  line-height: 1;
}

.profile-stat-label {
  font-size: var(--font-size-xs);
  color: var(--text-muted);
  margin-top: var(--space-xs);
  text-transform: uppercase;
  letter-spacing: 0.5px;
}

.profile-cta {
  display: flex;
  align-items: center;
  gap: var(--space-xs);
  margin-top: var(--space-md);
  color: var(--primary);
  font-size: var(--font-size-sm);
  font-weight: 600;
  transition: var(--transition-normal);
}

.profile-card:hover .profile-cta {
  color: var(--secondary);
}

.profile-cta i {
  transition: transform 0.3s;
}

.profile-card:hover .profile-cta i {
  transform: translateX(5px);
}

/* Platform-specific colors */
.github-logo { background: linear-gradient(135deg, #333 0%, #24292e 100%); }
.twitter-logo { background: linear-gradient(135deg, #1DA1F2 0%, #0d8bd9 100%); }
.linkedin-logo { background: linear-gradient(135deg, #0077B5 0%, #005582 100%); }
.instagram-logo { background: linear-gradient(45deg, #405DE6, #5851DB, #833AB4, #C13584, #E1306C, #FD1D1D); }
.facebook-logo { background: linear-gradient(135deg, #1877F2 0%, #0D5FDB 100%); }
.youtube-logo { background: linear-gradient(135deg, #FF0000 0%, #CC0000 100%); }
.medium-logo { background: linear-gradient(135deg, #000000 0%, #333333 100%); }
.dribbble-logo { background: linear-gradient(135deg, #EA4C89 0%, #C32361 100%); }
.behance-logo { background: linear-gradient(135deg, #1769FF 0%, #0057FF 100%); }

/* Profile types */
[data-type="social"] .profile-badge { background: var(--gradient-accent); }
[data-type="professional"] .profile-badge { background: var(--gradient-secondary); }
[data-type="development"] .profile-badge { background: linear-gradient(135deg, #333 0%, #24292e 100%); }
[data-type="blog"] .profile-badge { background: linear-gradient(135deg, #FF5722 0%, #E64A19 100%); }
[data-type="business"] .profile-badge { background: linear-gradient(135deg, #4CAF50 0%, #388E3C 100%); }
[data-type="visual"] .profile-badge { background: linear-gradient(135deg, #E1306C 0%, #833AB4 100%); }

.no-results {
  text-align: center;
  padding: var(--space-2xl);
  color: var(--text-muted);
  grid-column: 1 / -1;
  display: none;
}

.no-results.show {
  display: block;
}

.no-results i {
  font-size: var(--font-size-4xl);
  margin-bottom: var(--space-md);
  color: var(--text-muted);
  opacity: 0.5;
}

/* =========================================
   SKILLS SECTION
   ========================================= */
.skills-section {
  background: var(--bg-primary);
}

.skills-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
  gap: var(--space-lg);
}

.skill-category {
  background: var(--bg-card);
  border-radius: var(--radius-lg);
  padding: var(--space-xl);
  border: 1px solid rgba(255, 255, 255, 0.1);
  transition: var(--transition-normal);
}

.skill-category:hover {
  transform: translateY(-5px);
  border-color: var(--primary);
  box-shadow: var(--shadow-lg);
}

.skill-header {
  display: flex;
  align-items: center;
  gap: var(--space-md);
  margin-bottom: var(--space-lg);
}

.skill-icon {
  width: 56px;
  height: 56px;
  border-radius: var(--radius-md);
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: var(--font-size-xl);
  color: var(--text-light);
  background: var(--gradient-primary);
}

.skill-header h3 {
  margin: 0;
  font-size: var(--font-size-xl);
}

.skill-list {
  display: flex;
  flex-direction: column;
  gap: var(--space-md);
}

.skill-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.skill-name {
  font-weight: 500;
  color: var(--text-primary);
}

.skill-level {
  display: flex;
  align-items: center;
  gap: var(--space-sm);
}

.skill-level-bar {
  width: 100px;
  height: 6px;
  background: rgba(255, 255, 255, 0.1);
  border-radius: 3px;
  overflow: hidden;
}

.skill-level-fill {
  height: 100%;
  background: var(--gradient-primary);
  border-radius: 3px;
  transition: width 0.8s ease;
}

/* =========================================
   TIMELINE SECTION
   ========================================= */
.timeline-section {
  background: var(--bg-secondary);
}

.timeline {
  position: relative;
  max-width: 800px;
  margin: 0 auto;
}

.timeline::before {
  content: '';
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
  width: 2px;
  height: 100%;
  background: var(--gradient-primary);
}

.timeline-item {
  position: relative;
  margin-bottom: var(--space-xl);
  width: calc(50% - 30px);
}

.timeline-item:nth-child(odd) {
  left: 0;
}

.timeline-item:nth-child(even) {
  left: calc(50% + 30px);
}

.timeline-content {
  background: var(--bg-card);
  border-radius: var(--radius-lg);
  padding: var(--space-xl);
  border: 1px solid rgba(255, 255, 255, 0.1);
  position: relative;
  transition: var(--transition-normal);
}

.timeline-content:hover {
  transform: translateY(-5px);
  border-color: var(--primary);
  box-shadow: var(--shadow-md);
}

.timeline-date {
  background: var(--gradient-primary);
  color: var(--text-light);
  padding: var(--space-xs) var(--space-md);
  border-radius: 20px;
  font-size: var(--font-size-sm);
  font-weight: 500;
  display: inline-block;
  margin-bottom: var(--space-md);
}

.timeline-content h3 {
  margin: 0 0 var(--space-xs);
  font-size: var(--font-size-lg);
}

.timeline-content .company {
  color: var(--primary);
  font-weight: 600;
  margin-bottom: var(--space-sm);
  display: block;
}

.timeline-content p {
  color: var(--text-secondary);
  margin-bottom: 0;
}

/* =========================================
   PROJECTS & BLOG SECTION
   ========================================= */
.projects-section {
  background: var(--bg-primary);
}

.project-grid {
  display: grid;
  grid-template-columns: repeat(auto-fill, minmax(350px, 1fr));
  gap: var(--space-xl);
}

.project-card {
  background: var(--bg-card);
  border-radius: var(--radius-lg);
  padding: var(--space-xl);
  border: 1px solid rgba(108, 99, 255, 0.2);
  transition: var(--transition-normal);
  cursor: pointer;
  position: relative;
  overflow: hidden;
  display: flex;
  flex-direction: column;
  height: 100%;
  backdrop-filter: blur(10px);
  box-shadow: var(--shadow-md);
}

.project-card::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(108, 99, 255, 0.1), transparent);
  transition: left 0.7s ease;
  z-index: 1;
}

.project-card:hover::before {
  left: 100%;
}

.project-card:hover {
  transform: translateY(-8px) scale(1.02);
  border-color: var(--primary);
  box-shadow: var(--shadow-lg);
}

.project-image-container {
  position: relative;
  width: 100%;
  height: 200px;
  border-radius: var(--radius-md);
  overflow: hidden;
  margin-bottom: var(--space-lg);
  background: var(--gradient-dark);
}

.project-image {
  width: 100%;
  height: 100%;
  object-fit: cover;
  transition: transform 0.7s ease;
}

.project-card:hover .project-image {
  transform: scale(1.1);
}

.project-image-overlay {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: linear-gradient(to bottom, transparent 60%, rgba(15, 23, 42, 0.9));
  display: flex;
  align-items: flex-end;
  padding: var(--space-md);
  opacity: 0;
  transition: opacity 0.3s ease;
}

.project-card:hover .project-image-overlay {
  opacity: 1;
}

.project-category {
  background: var(--gradient-primary);
  color: var(--text-light);
  padding: var(--space-xs) var(--space-sm);
  border-radius: 20px;
  font-size: var(--font-size-xs);
  font-weight: 600;
}

.project-title {
  font-size: var(--font-size-xl);
  margin-bottom: var(--space-md);
  color: var(--text-primary);
  line-height: 1.3;
  flex-grow: 1;
  font-weight: 700;
}

.project-description {
  color: var(--text-secondary);
  margin-bottom: var(--space-lg);
  line-height: 1.6;
  font-size: var(--font-size-base);
  flex-grow: 1;
}

.project-tags {
  display: flex;
  gap: var(--space-xs);
  flex-wrap: wrap;
  margin-bottom: var(--space-lg);
}

.project-tag {
  background: rgba(108, 99, 255, 0.1);
  color: var(--primary);
  padding: var(--space-xs) var(--space-sm);
  border-radius: 20px;
  font-size: var(--font-size-xs);
  font-weight: 500;
  transition: var(--transition-normal);
  border: 1px solid rgba(108, 99, 255, 0.3);
}

.project-tag:hover {
  transform: translateY(-2px);
  background: var(--gradient-primary);
  color: var(--text-light);
  border-color: transparent;
}

.project-meta {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: var(--space-md);
  padding-top: var(--space-md);
  border-top: 1px solid rgba(255, 255, 255, 0.1);
  font-size: var(--font-size-sm);
}

.project-date {
  display: flex;
  align-items: center;
  gap: var(--space-xs);
  color: var(--text-muted);
}

.project-read-more {
  color: var(--primary);
  font-weight: 600;
  transition: var(--transition-normal);
  display: flex;
  align-items: center;
  gap: var(--space-xs);
}

.project-card:hover .project-read-more {
  color: var(--secondary);
  transform: translateX(5px);
}

/* Blog post specific styles */
.project-card.blog-post::after {
  content: 'ðŸ“ BLOG';
  position: absolute;
  top: -6px;
  right: -6px;
  background: var(--gradient-accent);
  color: var(--text-light);
  padding: 4px 12px;
  border-radius: 20px;
  font-size: var(--font-size-xs);
  font-weight: 700;
  z-index: 2;
  box-shadow: var(--shadow-accent);
}

.project-card.blog-post .project-title {
  background: linear-gradient(45deg, var(--text-primary), var(--primary));
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
}

.project-card.blog-post:hover .project-title {
  background: var(--gradient-primary);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
}

/* =========================================
   TESTIMONIALS SECTION
   ========================================= */
.testimonials-section {
  background: var(--bg-secondary);
}

.testimonials-slider {
  position: relative;
  max-width: 900px;
  margin: 0 auto;
  overflow: hidden;
}

.testimonials-track {
  display: flex;
  transition: transform 0.5s ease;
}

.testimonial-card {
  flex: 0 0 100%;
  padding: var(--space-xl);
  background: var(--bg-card);
  border-radius: var(--radius-lg);
  border: 1px solid rgba(255, 255, 255, 0.1);
  text-align: center;
  box-shadow: var(--shadow-md);
}

.testimonial-content {
  font-size: var(--font-size-lg);
  font-style: italic;
  color: var(--text-secondary);
  margin-bottom: var(--space-xl);
  line-height: 1.8;
  position: relative;
}

.testimonial-content::before,
.testimonial-content::after {
  content: '"';
  font-size: var(--font-size-4xl);
  color: var(--primary);
  opacity: 0.3;
  position: absolute;
}

.testimonial-content::before {
  top: -20px;
  left: -10px;
}

.testimonial-content::after {
  bottom: -40px;
  right: -10px;
}

.testimonial-author {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: var(--space-md);
  margin-top: var(--space-xl);
}

.author-avatar {
  width: 60px;
  height: 60px;
  border-radius: var(--radius-full);
  object-fit: cover;
  border: 2px solid var(--primary);
}

.author-info h4 {
  margin: 0;
  font-size: var(--font-size-lg);
}

.author-info p {
  margin: 0;
  color: var(--text-muted);
  font-size: var(--font-size-sm);
}

.testimonial-nav {
  display: flex;
  justify-content: center;
  gap: var(--space-md);
  margin-top: var(--space-xl);
}

.testimonial-dot {
  width: 12px;
  height: 12px;
  border-radius: var(--radius-full);
  background: rgba(255, 255, 255, 0.2);
  cursor: pointer;
  transition: var(--transition-normal);
}

.testimonial-dot.active {
  background: var(--primary);
  transform: scale(1.2);
}

/* =========================================
   STATISTICS SECTION
   ========================================= */
.statistics-section {
  background: var(--bg-primary);
  min-height: 100vh;
  padding: var(--space-3xl) 0;
}

.statistics-content {
  max-width: 900px;
  margin: 0 auto;
  background: var(--bg-card);
  border-radius: var(--radius-lg);
  padding: var(--space-xl);
  border: 1px solid rgba(255, 255, 255, 0.1);
}

.stats-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
  gap: var(--space-lg);
  margin-bottom: var(--space-2xl);
}

.statistics-stat-item {
  text-align: center;
  padding: var(--space-lg);
  background: rgba(15, 23, 42, 0.5);
  border-radius: var(--radius-md);
  border: 1px solid rgba(255, 255, 255, 0.1);
  transition: var(--transition-normal);
}

.statistics-stat-item:hover {
  transform: translateY(-5px);
  border-color: var(--primary);
  box-shadow: var(--shadow-md);
}

.statistics-stat-number {
  font-size: var(--font-size-4xl);
  font-weight: 800;
  color: var(--secondary);
  margin-bottom: var(--space-xs);
  display: block;
}

.statistics-stat-label {
  font-size: var(--font-size-sm);
  color: var(--text-muted);
  text-transform: uppercase;
  letter-spacing: 1px;
}

.statistics-chart {
  width: 100%;
  height: 300px;
  background: rgba(15, 23, 42, 0.5);
  border-radius: var(--radius-md);
  border: 1px solid rgba(255, 255, 255, 0.1);
  padding: var(--space-lg);
  margin-top: var(--space-xl);
}

/* =========================================
   NEWSLETTER SECTION
   ========================================= */
.newsletter-section {
  background: var(--gradient-dark);
  color: var(--text-light);
  text-align: center;
}

.newsletter-section .section-header h2,
.newsletter-section .section-subtitle {
  color: var(--text-light);
}

.newsletter-section .section-header h2::after {
  background: var(--text-light);
}

.newsletter-form {
  max-width: 600px;
  margin: var(--space-2xl) auto 0;
  display: flex;
  gap: var(--space-md);
}

.newsletter-input {
  flex: 1;
  padding: var(--space-md) var(--space-lg);
  border: 2px solid rgba(255, 255, 255, 0.2);
  border-radius: var(--radius-md);
  background: rgba(255, 255, 255, 0.1);
  color: var(--text-light);
  font-size: var(--font-size-base);
  backdrop-filter: blur(10px);
}

.newsletter-input::placeholder {
  color: rgba(255, 255, 255, 0.6);
}

.newsletter-input:focus {
  outline: none;
  border-color: var(--text-light);
  background: rgba(255, 255, 255, 0.15);
}

/* =========================================
   CONTACT SECTION
   ========================================= */
.contact-section {
  background: var(--bg-secondary);
}

.contact-content {
  max-width: 1200px;
  margin: 0 auto;
}

.contact-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: var(--space-2xl);
  margin-top: var(--space-xl);
}

.contact-info {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
  gap: var(--space-lg);
}

.contact-item {
  padding: var(--space-xl);
  background: var(--bg-card);
  border-radius: var(--radius-lg);
  transition: var(--transition-normal);
  border: 1px solid rgba(255, 255, 255, 0.1);
}

.contact-item:hover {
  transform: translateY(-8px);
  border-color: var(--primary);
  box-shadow: var(--shadow-lg);
}

.contact-icon {
  font-size: var(--font-size-3xl);
  color: var(--primary);
  margin-bottom: var(--space-md);
}

.contact-item h3 {
  margin-bottom: var(--space-xs);
  font-size: var(--font-size-lg);
}

.contact-item p {
  color: var(--text-muted);
  font-size: var(--font-size-base);
}

.contact-form-wrapper {
  background: var(--bg-card);
  border-radius: var(--radius-lg);
  padding: var(--space-xl);
  border: 1px solid rgba(255, 255, 255, 0.1);
}

.contact-form-wrapper h3 {
  text-align: center;
  margin-bottom: var(--space-xl);
  font-size: var(--font-size-2xl);
}

.contact-form {
  display: flex;
  flex-direction: column;
  gap: var(--space-lg);
}

.form-group {
  display: flex;
  flex-direction: column;
  gap: var(--space-xs);
}

.form-group label {
  color: var(--text-primary);
  font-weight: 500;
  font-size: var(--font-size-sm);
}

.form-control {
  padding: var(--space-md) var(--space-lg);
  border: 2px solid rgba(255, 255, 255, 0.1);
  border-radius: var(--radius-md);
  background: rgba(255, 255, 255, 0.05);
  color: var(--text-primary);
  font-size: var(--font-size-base);
  transition: var(--transition-normal);
  backdrop-filter: blur(10px);
}

.form-control:focus {
  outline: none;
  border-color: var(--primary);
  background: rgba(255, 255, 255, 0.08);
  box-shadow: 0 0 0 3px rgba(108, 99, 255, 0.1);
}

.form-control::placeholder {
  color: rgba(255, 255, 255, 0.4);
}

textarea.form-control {
  min-height: 150px;
  resize: vertical;
}

.submit-btn {
  margin-top: var(--space-sm);
}

.social-links-large {
  display: flex;
  justify-content: center;
  gap: var(--space-lg);
  margin-top: var(--space-xl);
}

.social-link-large {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  width: 48px;
  height: 48px;
  background: var(--bg-card);
  border-radius: var(--radius-full);
  color: var(--text-primary);
  font-size: var(--font-size-lg);
  transition: var(--transition-normal);
  border: 1px solid rgba(255, 255, 255, 0.1);
  text-decoration: none;
}

.social-link-large:hover {
  background: var(--gradient-primary);
  color: var(--text-light);
  transform: translateY(-5px);
  border-color: transparent;
  box-shadow: var(--shadow-md);
}

/* =========================================
   FOOTER
   ========================================= */
.footer {
  background: var(--bg-primary);
  color: var(--text-light);
  padding: var(--space-3xl) 0 var(--space-xl);
  text-align: center;
  border-top: 1px solid rgba(255, 255, 255, 0.1);
}

.footer-content {
  max-width: 600px;
  margin: 0 auto;
}

.footer-logo {
  font-size: var(--font-size-3xl);
  font-weight: 800;
  margin-bottom: var(--space-md);
  background: var(--gradient-primary);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  display: inline-block;
}

.footer-about p {
  color: var(--text-muted);
  margin-bottom: var(--space-lg);
  line-height: 1.6;
  font-size: var(--font-size-base);
}

.footer-links {
  display: flex;
  justify-content: center;
  gap: var(--space-xl);
  margin-bottom: var(--space-xl);
  flex-wrap: wrap;
}

.footer-link {
  color: var(--text-secondary);
  text-decoration: none;
  transition: var(--transition-normal);
}

.footer-link:hover {
  color: var(--primary);
}

.footer-bottom {
  padding-top: var(--space-lg);
  border-top: 1px solid rgba(255, 255, 255, 0.1);
  color: var(--text-muted);
  font-size: var(--font-size-sm);
  margin-top: var(--space-lg);
}

/* =========================================
   MODAL STYLES
   ========================================= */
.view-modal {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.9);
  display: none;
  justify-content: center;
  align-items: center;
  z-index: var(--z-modal);
  padding: var(--space-lg);
}

.view-modal.active {
  display: flex;
  animation: modalFadeIn 0.3s ease;
}

@keyframes modalFadeIn {
  from { opacity: 0; }
  to { opacity: 1; }
}

.modal-content {
  background: var(--bg-secondary);
  border-radius: var(--radius-lg);
  width: 100%;
  max-width: 800px;
  max-height: 85vh;
  overflow-y: auto;
  position: relative;
