      const postUrl = getPostUrl(post);
      const postExcerpt = getPostExcerpt(post);
      const postDate = getPostDate(post);
      const postImage = getPostImage(post);
      const postTags = getPostTags(post);
      
      const blogPostCard = document.createElement('div');
      blogPostCard.className = 'project-card blog-post';
      blogPostCard.onclick = () => window.location.href = postUrl;
      
      blogPostCard.innerHTML = `
        <div class="project-image-container">
          <img class="project-image" src="${postImage}" alt="${postTitle}" loading="lazy">
          <div class="project-image-overlay">
            <span class="project-category">Blog Post</span>
          </div>
        </div>
        <h3 class="project-title">${postTitle}</h3>
        <p class="project-description">${postExcerpt}</p>
        ${postTags.length > 0 ? `
          <div class="project-tags">
            ${postTags.slice(0, 3).map(tag => `<span class="project-tag">${tag}</span>`).join('')}
          </div>
        ` : ''}
        <div class="project-meta">
          ${postDate ? `
            <div class="project-date">
              <i class="far fa-calendar"></i> ${postDate}
            </div>
          ` : ''}
          <div class="project-read-more">
            Read Article <i class="fas fa-arrow-right"></i>
          </div>
        </div>
      `;
      
      container.appendChild(blogPostCard);
    });
  }
  
  function getPostUrl(post) {
    if (post.link) {
      for (let link of post.link) {
        if (link.rel === 'alternate') return link.href;
      }
    }
    return '#';
  }
  
  function getPostExcerpt(post) {
    let excerpt = '';
    if (post.summary?.$t) excerpt = post.summary.$t;
    else if (post.content?.$t) excerpt = post.content.$t;
    
    return excerpt
      .replace(/<[^>]*>/g, '')
      .substring(0, 120) + (excerpt.length > 120 ? '...' : '');
  }
  
  function getPostDate(post) {
    if (post.published?.$t) {
      return new Date(post.published.$t).toLocaleDateString('en-US', {
        year: 'numeric',
        month: 'short',
        day: 'numeric'
      });
    }
    return '';
  }
  
  function getPostImage(post) {
    if (post.content?.$t) {
      const imgMatch = post.content.$t.match(/<img[^>]+src="([^">]+)"/);
      if (imgMatch?.[1]) return imgMatch[1];
    }
    
    // Fallback images
    const fallbackImages = [
      'https://images.unsplash.com/photo-1499750310107-5fef28a66643?ixlib=rb-4.0.3&auto=format&fit=crop&w=800&q=80',
      'https://images.unsplash.com/photo-1551288049-bebda4e38f71?ixlib=rb-4.0.3&auto=format&fit=crop&w=800&q=80',
      'https://images.unsplash.com/photo-1540350394557-8d14678e7f91?ixlib=rb-4.0.3&auto=format&fit=crop&w=800&q=80'
    ];
    
    return fallbackImages[Math.floor(Math.random() * fallbackImages.length)];
  }
  
  function getPostTags(post) {
    const tags = [];
    if (post.category) {
      post.category.forEach(cat => {
        if (cat.term && cat.scheme?.includes('labels')) {
          tags.push(cat.term);
        }
      });
    }
    return tags;
  }
  
