  align-items: center;
  position: sticky;
  top: 0;
  z-index: 1;
  border-bottom: 1px solid rgba(255, 255, 255, 0.1);
}

.modal-header h2 {
  color: var(--text-light);
  margin: 0;
  font-size: var(--font-size-2xl);
}

